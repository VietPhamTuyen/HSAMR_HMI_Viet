package de.amr.plt.rcTestapp;

import android.content.Context;
import android.graphics.Bitmap;
import android.graphics.BitmapFactory;
import android.graphics.Canvas;
import android.graphics.Color;
import android.graphics.Paint;
import android.view.View;

public class Map extends View{

	Paint myPaint;
	Bitmap car;
	Bitmap map;
	
	public Map(Context context) {
		super(context);
		// TODO Auto-generated constructor stub
		car = BitmapFactory.decodeResource(getResources(), R.drawable.kreis);
		map = BitmapFactory.decodeResource(getResources(), R.drawable.map_hor_v1_2);

	}

	@Override
	protected void onDraw(Canvas canvas) {
		// TODO Auto-generated method stub
		super.onDraw(canvas);
		canvas.drawColor(Color.WHITE);
		canvas.drawBitmap(map,0, 0, null);
		canvas.drawBitmap(car,canvas.getWidth()/2, canvas.getHeight()/2, null);
		
		
		}

	
	
}